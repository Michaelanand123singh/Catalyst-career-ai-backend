# Catalyst Career AI Backend - Production Environment Variables Template
# Copy this file to .env and fill in your actual values for production deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000

# =============================================================================
# GOOGLE AI API
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# AI Model Configuration
GEMINI_MODEL=gemini-1.5-flash
EMBEDDING_MODEL=models/embedding-001

# =============================================================================
# MONGODB DATABASE
# =============================================================================
# MongoDB connection string (Atlas or self-hosted)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB=catalyst_career_ai
MONGODB_USERS_COLLECTION=users
MONGODB_ACTIVITY_COLLECTION=activity_logs

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Generate a secure random token for admin API access
ADMIN_API_TOKEN=your_secure_admin_token_here

# Comma-separated list of admin emails
ADMIN_EMAILS=admin@catalystcareers.in,admin2@catalystcareers.in

# =============================================================================
# RAG SYSTEM CONFIGURATION
# =============================================================================
DOCUMENTS_PATH=data/career_documents
CHROMA_DB_PATH=data/vector_db
CHUNK_SIZE=800
CHUNK_OVERLAP=100
VECTOR_SEARCH_K=4
SCORE_THRESHOLD=0.6

# =============================================================================
# AI GENERATION PARAMETERS
# =============================================================================
TEMPERATURE=0.4
MAX_TOKENS=1024

# =============================================================================
# FRONTEND URLS (for CORS)
# =============================================================================
# Add your frontend URLs here
FRONTEND_URL=https://your-frontend-domain.com

# =============================================================================
# CLOUDINARY (for image uploads)
# =============================================================================
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
